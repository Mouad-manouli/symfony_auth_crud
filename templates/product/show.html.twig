
{% extends 'base.html.twig' %}

{% block title %}Create product{% endblock %}

{% block body %}
         
     <div class="container mt-5">
    <h1 class="mb-4">Product #{{ product.id }}</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Name Product: {{ product.namep }}</h5>
            <p class="card-text"><strong>Description:</strong> {{ product.descriptionp }}</p>
            <p class="card-text"><strong>Price:</strong> {{ product.prix }} MAD</p>
            <p class="card-text"><strong>Quantity:</strong> {{ product.qtep }}</p>
            <a href="{{ path('app_product') }}" class="btn btn-secondary mt-3">Back</a>
        </div>
    </div>
</div>

     

       
{% endblock %}
